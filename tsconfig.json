{
  "compilerOptions": {
    "target": "ES6", // or higher
    "module": "commonjs", // or higher
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node"],  // This should be in the 'types' array
    "typeRoots": [
      "./node_modules/@types",  // Ensure this is set correctly
      "./types"                 // If you have custom types in a 'types' directory
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
